@using BackSideWeb.Models.ViewModel;
@using BackSideWeb.Models.ViewModel.PlayBetRecord
@model LotteryHistoryViewModel
@{
    ViewData["Title"] = "开奖号码";
    var startDatedefault = DateTime.Now.ToString("yyyy-MM-dd");
    var endDatedefault = DateTime.Now.ToString("yyyy-MM-dd");
}

<div class="bg spacing gap system_filter" id="jqMemberFilter">
    <br />
    <div class="col">
        <div class="item">
            <div class="label_input column_layout">
                <label for="">
                    <p>彩种</p>
                </label>
                @await Html.PartialAsync("Partial/_DropdownMenu", new DropdownMenuSetting
                {
                SettingId = "jqLotteryTypeSelectList",
                Items = Model.LotteryIdSelectList,
                })
            </div>
        </div>
    </div>
    <div class="col">
        <div class="item">
            <div class="label_input column_layout">
                <label for="">
                    <p>期号</p>
                </label>
                <div class="form_set">
                    <input class="jqFilter" type="text" name="" id="IssueNo" placeholder="" value="" maxlength="50">
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="item">
            <div class="label_input column_layout">
                <label for="">
                    <p>开奖状态</p>
                </label>
                @await Html.PartialAsync("Partial/_DropdownMenu", new DropdownMenuSetting
                {
                SettingId = "jqIsLotterySelectList",
                Items = Model.IsLotterySelectList,
                })
            </div>
        </div>
    </div>
    <div class="col">
        <div class="item">
            <div class="col_p_1">
                <div class="label_input column_layout">
                    <label for="">
                        <p>封单时间</p>
                    </label>
                    <div class="form_set datepicker_text">
                        @Html.TextBox("jqStartDate", startDatedefault, new { id = "jqStartDate", @class = "width_set jqFilter" })
                        <span>至</span>
                        @Html.TextBox("jqEndDate", endDatedefault, new { id = "jqEndDate", @class = "width_set jqFilter" })
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col">

        <div class="item">
            <div class="btns">
                <a href="javascript:;" class="btn_default main_color jqSearchBtn">查询</a>
                <a href="javascript:;" class="btn_default main_color_line jqResetBtn">清空</a>
            </div>
        </div>
    </div>
</div>

<div id="jqContentRoot" style="display:block">
    <div class="bg gap">
        <div class="member_center_report agent_report table_overflow_x">
            <table>
                <thead>
                    <tr>
                        <th>期号</th>
                        <th>彩种</th>
                        <th>开奖号码</th>
                        <th>封单时间</th>
                        <th>开奖时间</th>
                        <th>开奖花费时间</th>
                        <th>开奖状态</th>
                    </tr>
                </thead>
                <tbody id="jqGridContent">
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer_function_content space_between">
        <div class="jqPagination pagination"></div>
    </div>
</div>
<style>
    .col {
        margin-top: 10px;
    }

    .jqDisplayBtn {
        background-color: #02a7f0
    }

    .jqFailedBtn {
        margin-left: 10px;
        background-color: #ec808d
    }
    /* 使用 flex 布局使 <p> 元素水平排列 */
    #myDiv {
        display: flex;
        flex-direction: row;
    }

        /* 设置文字颜色为红色 */
        #myDiv p {
            color: red;
            margin: 0; /* 去除默认的段落边距 */
            margin-left: 10px;
        }
</style>