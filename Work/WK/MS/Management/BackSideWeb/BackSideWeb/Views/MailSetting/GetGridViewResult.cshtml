@using BackSideWeb.Model.ViewModel.Game
@using JxBackendService.Model.Paging
@model PagedResultModel<QueryAdvertisingContentModel>


<div>
    <table>
        <tbody class="jqBody">
            @foreach (var item in Model.ResultList)
            {
                <tr>
                    <td>@item.AdvertisingText</td>
                    <td>@item.AdvertisingContentText</td>
                    <td>
                        <div class="flex_content">
                            <a href="javascript:void(0)" class="fa fa-edit" style="font-size: 20px; color:black;"
                           onclick="@string.Format("window.services.searchGridService.openUpdateView('{0}')", item.KeyContent)">
                            </a>

                            <a href="javascript:void(0)" class="fa fa-copy clickCopy" style="font-size: 18px; color:black;" data-clipboard-text="@item.AdvertisingContent" ></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="jqPagination">
        @await Html.PartialAsync("Partial/_PaginationByPagerInfo", Model)
    </div>
</div>

