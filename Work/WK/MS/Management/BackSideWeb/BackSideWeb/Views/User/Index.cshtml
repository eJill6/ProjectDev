@using BackSideWeb.Models.ViewModel
@model UserViewModel
@{
	ViewData["Title"] = "觅会员查询";
}

<div class="bg spacing gap system_filter" id="jqMemberFilter">
	<br />
	<div class="col">
		<div class="item">
			<div class="label_input column_layout">
				<label for="">
					<p>会员ID</p>
				</label>
				<div class="form_set">
					<input class="jqFilter" type="text" name="" id="jqUserId" placeholder="" value="" maxlength="20">
				</div>
			</div>
		</div>
	</div>
	<div class="col">
		<div class="item jqAdvanceFilter">
			<div class="col_p_1">
				<div class="label_input column_layout">
					<label for="" class="m_hide">
						<p>注册时间</p>
					</label>
					<div class="form_set datepicker_text">
						@Html.TextBox("jqStartDate", "", new { id = "jqStartDate", @class = "width_set jqFilter" })
						<span>至</span>
						@Html.TextBox("jqEndDate", "", new { id = "jqEndDate", @class = "width_set jqFilter" })
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col">
		<div class="item jqAdvanceFilter">
			<div class="label_input column_layout">
				<label for="">
					<p>身份</p>
				</label>
				@await Html.PartialAsync("Partial/_DropdownMenu", new DropdownMenuSetting
				{
				SettingId = "jqUserIdentitySelectList",
				Items = Model.IdentityTypeItems,
				})
			</div>
		</div>
	</div>
@*	<div class="col">
		<div class="item jqAdvanceFilter">
			<div class="label_input column_layout">
				<label for="">
					<p>营业</p>
				</label>
				@await Html.PartialAsync("Partial/_DropdownMenu", new DropdownMenuSetting
				{
				SettingId = "jqIsOpeningStatusSelectList",
				Items = Model.OpeningStatusItems,
				})
			</div>
		</div>
	</div>*@
	<div class="col">
		<div class="item">
			<div class="btns">
				<a href="javascript:;" class="btn_default main_color jqSearchBtn">查询</a>
				<a href="javascript:;" class="btn_default main_color_line jqResetBtn">清空</a>
			</div>
		</div>
	</div>
</div>

<div id="jqContentRoot" style="display:none">
	<div class="bg gap">
		<div class="member_center_report agent_report table_overflow_x">
			<table>
				<thead>
					<tr>
						<th>会员ID</th>
						<th>注册时间</th>
						<th>会员昵称</th>
						<th>会员身份</th>
						<th>已发帖</th>
						<th>累积收益</th>
						<th>保证金</th>
						<th>详细</th>
						<th>身份编辑</th>
						<th>调整保证金</th>
					</tr>
				</thead>
				<tbody id="jqGridContent">
				</tbody>
			</table>
		</div>
	</div>
	<div class="footer_function_content space_between">
		<div class="jqPagination pagination"></div>
	</div>
</div>