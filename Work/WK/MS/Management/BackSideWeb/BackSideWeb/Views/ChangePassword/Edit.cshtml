@model ChangePasswordParam;
@using JxBackendService.Model.Param.BackSideWeb;
@using JxBackendService.Resource.Element;

<div class="label_input">
    <label>
        <p>@DisplayElement.OldPassword</p>
    </label>
    <div class="form_set">
        <input type="password" asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
    </div>
</div>
<div class="label_input">
    <label>
        <p>@DisplayElement.NewPassword</p>
    </label>
    <div class="form_set">
        <input type="password" asp-for="NewPassword" />
        <span asp-validation-for="NewPassword"></span>
    </div>
</div>
<div class="label_input">
    <label>
        <p>确认密码</p>
    </label>
    <div class="form_set">
        <input type="password" name="confirmPassword" id="confirmPassword"/>
        <span class="field-validation-valid" data-valmsg-for="confirmPassword" data-valmsg-replace="true"></span>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#editSingleRowForm').setEyeToPasswordInput();

        $("#confirmPassword").rules(
            "add",
            {
                required: true,
                equalTo: "#NewPassword",
                messages: {
                    required: "确认密码 不可为空",
                    equalTo: "确认密码与密码不一致"
                }
            }
        );
    });
</script>