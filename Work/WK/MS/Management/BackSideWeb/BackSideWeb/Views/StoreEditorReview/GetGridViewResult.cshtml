@using MS.Core.MMModel.Models.AdminUserManager
@using MS.Core.Models.Models
@using MS.Core.MMModel.Models.Post.Enums
@model PageResultModel<AdminBossShopList>
@{
    string clientServiceName = ViewBag.ClientServiceName.ToString();
}
<div>
    <table>
        <tbody class="jqBody">
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CreateTimeText</td>
                    <td>@item.ExamineTimeText</td>
                    <td>@item.UserId</td>
                    <td>
                        <div class="flex_content">
                            @if (item.Status == ReviewStatus.UnderReview)
                            {   
                                <p>
                                    <a href="javascript:void(0)" data-url='@Url.Action("Edit", "StoreEditorReview")' class="btn_default main_color icon_style text_btn"
                                       onclick="@string.Format("{0}.openEdit(this, '{1}')", clientServiceName, item.Id)">
                                       审核
                                    </a>
                                </p>
                            }
                            else
                            {
                                <p>@item.StatusText</p>
                            }
                        </div>
                    </td>
                    <td>
                        <div class="flex_content">
                            @if (item.Status == ReviewStatus.NotApproved)
                            {

                                <a href="javascript:void(0)" data-url='@Url.Action("Detail", "StoreEditorReview")'
                                   onclick="@string.Format("{0}.openDetail(this, '{1}')", clientServiceName, item.Id)">
                                    检视
                                </a>
                            }
                         
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="jqPagination">
        @await Html.PartialAsync("Partial/_Pagination", new PaginationSetting
        {
        PageNo = Model.PageNo,
            PageSize = Model.PageSize,
            PageCount = Model.TotalPage,
            DataCount = Model.TotalCount,
            Callback = "function(pageNo,pageSize){" + clientServiceName + ".changePage(pageNo,pageSize);}",
        })
    </div>
</div>