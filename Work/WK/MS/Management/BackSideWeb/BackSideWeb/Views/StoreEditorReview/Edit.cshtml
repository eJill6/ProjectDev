@model AdminBossShopList

@using JxBackendService.Common.Util;
@using JxBackendService.Model.Enums;
@using MS.Core.MMModel.Models.AdminUserManager;
@using MS.Core.MMModel.Models.User.Enums

@{
    var actType = (ActTypes)ViewBag.ActType;

    var resultCurrent = ViewBag.resultCurrent as AdminBossShopList;

}

<script src="~/js/business/adminUserManager/storeEditorReviewEditSingleRowService.min.js" asp-append-version="true"></script>

<div class="storeedithead">
    <div class="headContent ">
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left title">
                会员ID
            </div>
            <div class="detail_modal_col_right form_set title">
                @resultCurrent.UserId
            </div>
        </div>

        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left title">
                身份
            </div>
            <div class="detail_modal_col_right form_set title">
                @resultCurrent.ApplyIdentityText
            </div>
        </div>

    </div>

</div>
<div class="container">
    <div class="box">
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left title">
                当前资料
            </div>

        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                店铺名称
            </div>
            <div class="detail_modal_col_right form_set">
                @resultCurrent.ShopName
            </div>
        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                店铺介绍
            </div>
            <div class="detail_modal_col_right form_set">
                @resultCurrent.Introduction
            </div>
        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                妹子数量
            </div>
            <div class="detail_modal_col_right form_set">
                @resultCurrent.Girls
            </div>
        </div>


        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                QQ号码
            </div>
            <div class="detail_modal_col_right form_set">
                @resultCurrent.ContactInfo
            </div>

        </div>

        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                成交订单
            </div>
            <div class="detail_modal_col_right form_set">
                @resultCurrent.DealOrder
            </div>
        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                自评人气
            </div>
            <div class="detail_modal_col_right form_set">
                @resultCurrent.SelfPopularity
            </div>
        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                店龄
            </div>
            <div class="detail_modal_col_right form_set">
                @resultCurrent.ShopYears
            </div>

        </div>
        <div class="detail_modal_row">
            <div class="detail_modal_col_left">
                店铺头像
            </div>
            <div class="detail_modal_col_right form_set divPhoto" id="divPhoto">
                @if (resultCurrent.ShopAvatarSources.Count <= 0)
                {
                    <label>
                        未上传
                    </label>
                }
                else
                {
                    foreach (var item in resultCurrent.ShopAvatarSources)
                    {
                        <img src="@item.Value" layer-src="@item.Value" layer-pid="" alt="layer" width="80px" height="80px" layer-index="@item.Key" />
                    }


                }


            </div>

        </div>

        <div class="detail_modal_row">
            <div class="detail_modal_col_left">
                商家照片
            </div>
            <div class="detail_modal_col_right form_set divPhoto" id="divPhoto">
                @if (resultCurrent.BusinessPhotoSources.Count <= 0)
                {
                    <label>
                        未上传
                    </label>
                }
                else
                {
                    foreach (var item in resultCurrent.BusinessPhotoSources)
                    {
                        <img src="@item.Value" layer-src="@item.Value" layer-pid="" alt="layer" width="80px" height="80px" layer-index="@item.Key" />
                    }


                }

            </div>
        </div>
    </div>
    <div class="box" style="border-left: 1px solid #DDD;">
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left title">
                编辑资料待审
            </div>

        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                店铺名称
            </div>
            <div class="detail_modal_col_right form_set">
                <input type="text" asp-for="ShopName" placeholder="输入您的店铺名称，最多7个字" maxlength="7" />
            </div>
        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                店铺介绍
            </div>
            <div class="detail_modal_col_right form_set">
                <input type="text" asp-for="Introduction" placeholder="一句话概述你的店铺，最多17个字" maxlength="17" />
            </div>
        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                妹子数量
            </div>
            <div class="detail_modal_col_right form_set">
                <input type="text" asp-for="Girls" maxlength="5" />
            </div>
        </div>


        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                QQ号码
            </div>
            <div class="detail_modal_col_right form_set">
                <input type="text" asp-for="ContactInfo" maxlength="15" />
            </div>

        </div>

        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                成交订单
            </div>
            <div class="detail_modal_col_right form_set">
                <input type="text" asp-for="DealOrder" maxlength="5" />
            </div>
        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                自评人气
            </div>
            <div class="detail_modal_col_right form_set">
                <input type="text" asp-for="SelfPopularity" maxlength="5" />
            </div>
        </div>
        <div class="detail_modal_row label_input">
            <div class="detail_modal_col_left">
                店龄
            </div>
            <div class="detail_modal_col_right form_set">
                <input type="text" asp-for="ShopYears" maxlength="2" />
            </div>

        </div>

        <div class="detail_modal_row">
            <div class="detail_modal_col_left">
                店铺头像
            </div>
            <div class="detail_modal_col_right form_set divPhoto" id="divPhoto">
                @if (Model.ShopAvatarSources.Count <= 0)
                {
                    <label>
                        未上传
                    </label>
                }
                else
                {
                    foreach (var item in Model.ShopAvatarSources)
                    {
                        <img src="@item.Value" layer-src="@item.Value" layer-pid="" alt="layer" width="80px" height="80px" layer-index="@item.Key" />
                    }


                }


            </div>

        </div>

        <div class="detail_modal_row">
            <div class="detail_modal_col_left">
                商家照片
            </div>
            <div class="detail_modal_col_right form_set divPhoto" id="divPhoto">
                @if (Model.BusinessPhotoSources.Count <= 0)
                {
                    <label>
                        未上传
                    </label>
                }
                else
                {
                    foreach (var item in Model.BusinessPhotoSources)
                    {
                        <img src="@item.Value" layer-src="@item.Value" layer-pid="" alt="layer" width="80px" height="80px" layer-index="@item.Key" />
                    }
                }

            </div>
        </div>
        <div class="detail_modal_row ">
            <div class="detail_modal_col_left">
                审核
            </div>
            <div class="detail_modal_col_right form_set" style="width: 15%;">
                <span style="width: 100px;">
                    <input type="radio" value="1" name="Status" id="Status_1" class="Status" style="-webkit-appearance: radio;" checked />通  过
                </span>
                <span style="width: 100px;">
                    <input type="radio" value="2" name="Status" id="Status_2" class="Status" style="-webkit-appearance: radio;" />未通过
                </span>

            </div>
        </div>
        <div class="detail_modal_row">
            <div class="detail_modal_col_left">
                备注
            </div>
            <div class="detail_modal_col_right form_set" style="
    width: 80%;
   height: 140px;
">
                <textarea id="Memo" name="Memo" style="border: 1px solid #ccc;
    border-radius: 6px;width:100%;height:100%;" maxlength="500"></textarea>
            </div>
        </div>

    </div>
</div>
<input type="hidden" id="ExamineMan" name="ExamineMan" value="@ViewBag.UserName">
<input type="hidden" asp-for="Id"  />
<input type="hidden" asp-for="BossId" />
<input type="hidden" asp-for="UserId" />
<input type="hidden" asp-for="ApplyId" />
<input type="hidden" asp-for="ShopAvatar" value="@(!string.IsNullOrEmpty(string.Join(",", Model.ShopAvatarSources.Keys)) ? string.Join(",", Model.ShopAvatarSources.Keys) + "," : string.Empty)" />
<input type="hidden" asp-for="BusinessPhotoUrls" value="@(!string.IsNullOrEmpty(string.Join(",", Model.BusinessPhotoSources.Keys)) ? string.Join(",", Model.BusinessPhotoSources.Keys) + "," : string.Empty)" />

<style>
    .storeedithead {
        border-bottom: 1px solid #DDD;
    }

    .headContent {
        width: 50%;
    }

    .container {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    .box {
        margin-top: 10px;
        width: 50%;
        position: relative; /* 设置为相对定位，以便子元素的绝对定位参考父元素 */
    }

    .title {
        font-size: 14px;
        font-weight: bold;
    }

    .label_input {
        margin-bottom: 12px;
    }

    .label_input input {
        height: 27px
    }
</style>
<!-- 引入 video.js 样式 -->
<link href="/lib/video-js-8.5.1/video-js.min.css" rel="stylesheet" />
<!-- 引入 video.js 库文件 -->
<script src="/lib/video-js-8.5.1/video.min.js"></script>
<script src="/js/layui/layui.js"></script>
<link rel="stylesheet" href="/js/layui/css/layui.css">
<script>
    $(function () {
        var layer = layui.layer;
        // 图片层
        layer.photos({
            photos: '.divPhoto'
        });
    })
    $(".divPhoto img").each(async function () {
        var src = await new decryptoService().fetchSingleDownload($(this).attr("src"));
        $(this).attr("src", src);
        $(this).attr("layer-src", src);
    });
</script>